
<div class="daimei">
<h2>新規登録</h2>
</div>


<div class="godon">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


 
  <div class="field1">
    <%= f.text_field :name, autofocus: true, class: "field_input", placeholder: "name" %>
  </div>

  <div class="field2">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field_input", placeholder: "email" %>
  </div>

  <div class="field3">

    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "field_input", placeholder: "new-password(6characters minimum)" %>
  </div>

  <div class="field4">
    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field_input", placeholder: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>


<%= render "users/shared/links" %>
